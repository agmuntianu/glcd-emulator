<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <files>
        <!--<file>
            <outputDirectory>/</outputDirectory>
            <source>${project.artifactid}-${project.version}.jar</source>
            <filtered>true</filtered>
        </file>-->
        <file>
            <outputDirectory>/</outputDirectory>
            <source>${project.build.directory}/jfx/app/${project.artifactId}-${project.version}-jfx.jar</source>
            <destName>glcd-emulator-${project.version}.jar</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/scripts</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>run-emulator.cmd</include>
                <include>run-emulator.sh</include>
            </includes>
        </fileSet>
        <!--<fileSet>
            <directory>${project.build.directory}/jfx/app/</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*-jfx.jar</include>
            </includes>
        </fileSet>-->
    </fileSets>
</assembly>